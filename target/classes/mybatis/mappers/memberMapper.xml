<?xml version="1.0" encoding="UTF-8"?>
<!--mybatis 첫 mapper 만들때 -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="memberMapper">
  
  <insert id="memberJoin" parameterType="MemberVO">
  
	INSERT INTO member (id,pw,name,email,birth,gender)
 	VALUES(#{id},#{pw},#{name},#{email},#{birth},#{gender})
  </insert>
  
  <select id="memberIdCheck" resultType="MemberVO" parameterType="MemberVO">
  	<!-- 보안때문에 * 말고 id -->
  	select id from member where id = #{id} 
  
  </select>
  
  <select id="memberLogin" parameterType="MemberVO" resultType="MemberVO">
  
  	select * from member where id = #{id} and pw = #{pw}
  	
  </select>
  
  
  
  
  
  
  
  </mapper>